}

% Definindo um comando para verificar a paridade da página e inserir uma página em branco
\newcommand{\checkoddpageandclear}{
  \clearpage
  \ifodd\value{page}\else
    \thispagestyle{empty}
    \hbox{}\newpage
  \fi
}

